/* common/component/customModal.wxss */

.modal-header {
  background: #f2f2f2;
  color: #686868;
  padding: 3vw;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.modal-body {
  background: #fff;
}

.modal-footer {
  background: #fff;
  flex-direction: row;
  display: flex;
  align-items: center;
  width: 100%;
  border-top: 1rpx solid #e5e5e5;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.btn {
  flex: 1;
  text-align: center;
  padding: 18rpx 5rpx;
}

.btn-primary {
  color: #00a7f7;
  font-weight: bold;
}

