<!--pages/owner/company/companyTea/companyTea.wxml-->
<wxs src="../../../../util/util.wxs" module="tools" />
<view class="mainBody">
  <view class='flex line' wx:for="{{teaList}}" wx:for-item="on" wx:key="{{teaList}}">
    <view class="flex mui-col-sm-20 mui-align-center mui-view-center  imgView">
      <image class='img' src='{{on.teaImg}}'></image>
    </view>
    <view class="mui-col-sm-80 detail">
      <view class='teaName'>{{on.teaName}}</view>
      <view class="flex">
        <view wx:for="{{on.courseList}}" wx:for-item="list" wx:key="{{on.courseList}}">
          <view class="teaCourse" wx:if="{{index<4}}">{{list.courseName}}</view>
        </view>
      </view>
      <view class="teaCompany">{{on.teaCompanyName}}</view>
    </view>
  </view>
  <view wx:if="{{!hasData}}" class='flex NoEnterprise mui-align-center mui-view-center'>
    <image src='../../../../images/no_teacher.png'></image>
  </view>
</view>
