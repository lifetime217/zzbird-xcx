/* miniprogram/pages/owner/stuList/stuList.wxss */
@import "../../../common/style/iconfont.wxss";
@import "../../../common/style/common.wxss";

.img {
  width: 10vh;
  height: 10vh;
  border-radius: 50%;
}
.courseInforma {
  font-size: 4vw !important;
}

.moreCourse-content {
  padding: 3vw 3vw;
}

.icon-xiangqing {
  padding-left: 2vw;
  color: #50acff !important;
  font-size: 3.4vw;
}

.course {
  font-size: 4vw;
  padding-left: 2vw;
}

.course+text {
  font-size: 4vw;
}

.white {
  margin: 2vw;
  padding: 3vw;
  border-radius: 2vw;
  box-shadow: 0 4rpx 14rpx rgba(131, 130, 130, 0.4);
}

.icon-kecheng, .icon-qiyexuesheng {
  padding-left: 0.4vw;
}

.iconfont {
  font-size: 3.5vw;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #8d8d8d;
}

.mui-col-sm-70>view>text:first-child {
  padding-right: 2vw;
}

.detail>view:not(:first-child)>text:last-child {
  color: #b1aaaa;
  font-size: 13px;
}

.NullData text {
  display: block;
  text-align: center;
}

.NullData text:first-child {
  font-size: 15vh !important;
  padding-top: 17vh;
}

.icon-kong {
  color: #50acff;
}

.NullData text:last-child {
  color: #50acff;
}

.companyLine {
  border-bottom: 1px solid #b1aaaa;
  padding-bottom: 1px;
}

.courseLine {
  border-bottom: 1px solid #b1aaaa;
  padding-bottom: 1px;
}

.courNameFont {
  font-size: 3.8vw;
}

.to-end {
  font-size: 12px;
  color: #969696;
  text-align: center;
}

.to-line {
  border-bottom: 1px solid #b3b2b2;
}

.to-margin {
  margin-top: 2vh;
  margin-bottom: 2vh;
}
