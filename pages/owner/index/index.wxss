.weui-row {
  display: flex;
  background-color: white;
  padding: 0 0 0 40rpx;
  height: 12vw;
  justify-content: space-between;
  font-size: 17px;
  border-bottom: 1px solid #ededed;
}

.weui-row-top {
  margin-top: 1vh;
}

.weui-cell-tx {
  margin-left: 1vw;
}

.oldUser image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.icon-chakan {
  color: #8d8d8d;
}

.oldUser text {
  color: white;
}

.weui-cell-hd {
  display: flex;
  align-items: center;
}

.roleType {
  padding: 1vw 2vw;
  font-size: 3vw;
  border: 1px solid #fff;
  color: #fff;
}

.radio-group radio {
  zoom: 0.8;
}

.radio-group view:not(:last-child) {
  padding-bottom: 1vw;
}

