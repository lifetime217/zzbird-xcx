.green {
  color: #43bb67;
}

.icon-arrowright {
  font-size: 4vw;
  padding-right: 2vw;
  color: #ebebeb;
}

.head-portrait {
  width: 17vh;
  height: 17vh;
  text-align: center;
  overflow: hidden;
  border-radius: 50%;
}

.avatar-wrapper .text {
  color: white;
  text-align: center;
}

.extra-icons-container {
  color: white;
  position: absolute;
  top: 1vh;
  right: 2vw;
}

.icon-fenxiang {
  color: #43bb67;
}

.icon-qiyexuesheng {
  color: #43bb67;
}

.weui-cell-hd .icon-xiugai {
  font-size: 3.5vw !important;
}

.icon-qiyelaoshi, .icon-qiyexuesheng, .icon-kechengliebiao, .icon-keshizhangdan {
  font-size: 3.5vw;
}

.icon-xueshengliebiao, .icon-xiaoxiliebiao {
  font-size: 2.8vw;
}

.radio {
  position: relative;
  left: 1vw;
}

.change-row {
  text-align: center;
  line-height: 7vh;
  margin-top: 1vh;
  color: #50acff;
}

.change-row:last-of-type {
  margin-bottom: 10vh;
}

.icon-kecheng {
  color: #ff9f24;
}

.icon-yanjing {
  color: #ff9f24;
}

.mui-col-sm-33 {
  text-align: center;
  margin: 2vw 0;
}

.mui-col-sm-33:not(:last-child) {
  border-right: 1px solid #cac9c9;
}

.mui-col-sm-33>text:last-child {
  font-size: 4vw;
}

.little-icon {
  color: #8d8d8d !important;
}

.gray {
  color: rgb(187, 187, 187);
}

.gray-two {
  height: 16.5vh;
}

.blue {
  color: #50acff;
}

.mui-col-sm-33 text {
  display: block;
}

.mui-col-sm-33>text:first-child {
  font-size: 10vw;
}

.extra-icons-container text {
  padding-right: 3vw;
  font-size: 19px;
}

.num {
  padding-right: 3vw;
  color: rgb(158, 158, 158);
}

