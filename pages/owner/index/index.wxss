/* pages/owner/index/index.wxss */
@import "../../../common/style/iconfont.wxss";
@import "../../../common/style/common.wxss";

page {
  height: 99%;
  width: 100%;
  background-color: #f5f5f5;
}

.userInfo {
  margin: 0.3vh 0vw 1vh 0vw;
  height: 15vh;
  width: 100%;
  background-color: #fff;
}

.userImgView {
  height: 100%;
  width: 22%;
  padding-left: 2vw;
}

.userTitle {
  width: 78%;
  height: 100%;
}

.img {
  width: 16.5vw;
  height: 16.5vw;
  border-radius: 50% 50% 50% 50%;
}

.userName {
  width: 100%;
  height: 50%;
  align-items: flex-end;
  font-size: 4.5vw;
  padding: 0vh 0vh 0.3vh 0vh;
}

.introduce {
  width: 100%;
  height: 50%;
  align-items: flex-start;
  font-size: 3.5vw;
  padding: 0.3vh 0vh 0vh 0vh;
  color: #7e7e7e;
}

.roleType {
  font-size: 3vw;
  border: 0.3vw solid #8ec7fe;
  color: #8ec7fe;
  border-radius: 1vw;
  padding: 0vh 0.5vw 0.2vh 0.5vw;
  margin: 0vh 1vw 0.4vh 1vw;
}

.icon-arrowright-tag {
  position: absolute;
  top: 9vw;
  right: 6vw;
  font-size: 6vw;
}

.icon-arrowright-line {
  position: relative;
  top: 4vw;
  right: 5vw;
  font-size: 3.5vw;
  font-weight: 900;
  color: #C9C8CE;
}

.details {
  background-color: white;
  margin: 1vh 0vw 1vh 0vw;
  width: 100%;
  height: 13.5vh;
}

.block-view {
  height: 100%;
  width: 30%;
}

.vertical {
  height: 9vh;
  border-left: 0.3vw solid #ececec;
}

.number {
  width: 100%;
  height: 50%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  color: #7e7e7e;
  font-size: 6vw;
}

.word {
  width: 100%;
  height: 50%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  color: #7e7e7e;
  font-size: 4vw;
}

.layout {
  width: 100%;
}

.kuai {
  margin: 1vh 0vw 1vh 0vw;
  width: 100%;
}

.line {
  background-color: white;
  width: 100%;
  margin: 0.2vh 0vw 0.2vh 0vw;
  height: 8vh;
}

.label-view {
  width: 12%;
  height: 100%;
  padding: 0vh 0vw 0vh 2vw;
}

.label {
  font-size: 4vw;
}

.tga-name {
  width: 88%;
  height: 100%;
  font-size:4.2vw;
}
