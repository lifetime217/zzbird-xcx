@import "../../../common/style/iconfont.wxss";
@import "../../../common/style/common.wxss";

.avatar-wrapper {
  background: linear-gradient(rgb(80, 172, 255), rgb(132, 181, 255));
  padding: 25px 0;
}

.avatar-wrapper .avatar {
  /* margin: 0 auto; */
  text-align: center;
  display: flex;
  justify-content: center;
}

.icon-xiugai {
  font-size: 5vw !important;
}

.Edit {
  position: absolute;
  right: 4vw;
  top: 2vw;
}

.userinfo {
  line-height: 5vh;
  background: none;
  right: 3vw;
  top: 2vw;
  position: absolute;
  color: #fff;
}

.userinfo::after {
  border: none;
}

.weui-cell-tx>view {
  font-size: 14px;
}

.weui-border, .ListRow:first-child {
  border-top: 1px solid #ededed;
}

