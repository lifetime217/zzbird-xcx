/* pages/owner/message/message.wxss */
@import "../../../common/style/iconfont.wxss";
@import "../../../common/style/common.wxss";

page {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

.mainBody {
  border-top: 0.2vw solid #e9e9e9;
  width: 100%;
  height: 99%;
}

.line {
  height: 10.5vh;
  border-bottom: 0.2vw solid #e9e9e9;
  background: white;
}

.img-view {
  height: 100%;
  width: 20%;
}

.img {
  width: 13vw;
  height: 13vw;
  border-radius: 50% 50% 50% 50%;
  margin: 0vh 0vw 0vh 2vw;
}

.detail {
  height: 100%;
  width: 55%;
}

.title {
  width: 100%;
  height: 50%;
  font-size: 4.9vw;
}

.content {
  width: 100%;
  height: 50%;
  font-size: 3.5vw;
  color: #b7b7b7;
}

.title text {
  margin: 1vh 0vw 0vh 0vw;
}

.content text {
  margin: 0vh 0vw 0.2vh 0vw;
}

.exhibition {
  height: 100%;
  width: 25%;
}

.time-view {
  width: 100%;
  height: 50%;
  font-size: 2.5vw;
  color: #b7b7b7;
}

.time-view-red {
  width: 100%;
  height: 50%;
  font-size: 2.8vw;
  color: #eb5712;
}

.state-view {
  width: 100%;
  height: 50%;
}

.state-view view {
  width: 3vw;
  height: 3vw;
  background: red;
  border-radius: 50% 50% 50% 50%;
}

.no_message image {
  width: 100%;
  height: 88vw;
  margin: 2vw 0;
  position: relative;
  top: -2vh;
}
