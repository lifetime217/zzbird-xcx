/* pages/init/addCourse/addCourse.wxss */
@import "../../../common/style/common.wxss";
@import "../../../common/style/iconfont.wxss";

page {
  background: #f5f5f5;
}

.icon-arrowright {
  font-size: 4vw;
  color: #c7c6cc;
}

.course-picture, .course-name, .ageRange, .course-detai-info {
  margin-top: 2vh;
  background: #fff;
  padding: 0 3vw;
}

.course-picture {
  line-height: 10vh;
}

.course-title, .courseName-title, .schooltime-title, .class-time-choose-title,
.ageRange-title, .course-detai-info-title {
  font-size: 4vw;
}

.course-title+view, .courseName-title+view, .schooltime-title+view,
.class-time-choose-title+view, .ageRange-title+view,
.course-detai-info-title+view {
  padding-left: 6vw;
}

.check-picture, .placeholder-courseName, .information {
  color: #d4d4d4;
  font-size: 4.5vw;
}

.course-image {
  width: 7vh;
  height: 7vh;
  margin-right: 3vw;
}

.course-name, .school-time, .class-time-choose, .ageRange, .course-detai-info {
  line-height: 8vh;
}

.school-time, .class-time-choose {
  background: #fff;
  padding: 0 3vw;
  border-top: 1px solid #e5e5e5;
}

.picker {
  border-bottom: 1px solid #c5d1c5;
  text-align: center;
  width: 21vw;
  margin-right: 3vw;
}

.school {
  margin-right: 2vw;
}

.radio-class-time {
  padding-right: 6vw;
}

.checkbox {
  zoom: 0.7;
  position: relative;
  top: -1vw;
}

.classhour-option {
  font-size: 4.5vw;
}

.ageRang-bd {
  height: 0;
  overflow: hidden;
}

.ageRang-bd-show {
  height: auto;
}

.ageRang-item {
  opacity: 0;
  position: relative !important;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 30rpx;
  transform: translateY(-50%);
  transition: 0.3s;
}

.ageRang-item-show {
  opacity: 1;
  transform: translateY(0);
}

.ageRang-text {
  flex: 1;
  padding-left: 1vw;
  font-size: 4.5vw;
}

.ageRang {
  padding: 20rpx 0px;
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
  /* margin: 0 15px; */
}

.normal {
  transform: rotateZ(90deg);
  display: inline-block;
}

.triangle {
  font-weight: 100;
  transform: scale(0.85);
  font-stretch: condensed;
  display: inline-block;
}

.select {
  font-size: 4.5vw;
  letter-spacing: 0.3vw;
}

.age-option {
  position: relative;
  right: 0.5vw;
  zoom: 0.7;
}

.ageRang-select {
  background-color: #fff;
  border-radius: 4rpx;
  overflow: hidden;
}

.ageRang-item-hd {
  transition: opacity 0.3s;
}

.ageRang-item-hd-show {
  opacity: 0.2;
}

.btn {
  position: fixed;
  bottom: 2vh;
  margin: 2vw;
}

.editor-submit-btn {
  align-items: center;
  justify-content: center;
  background: #14a1fd;
  color: #fff;
  position: relative;
  width: 96vw;
}
