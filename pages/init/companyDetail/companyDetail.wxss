/* pages/init/companyDetail/companyDetail.wxss */
@import "../../../common/style/common.wxss";
@import "../../../common/style/iconfont.wxss";

.banner {
  height: 30vh;
}

.banner image {
  height: 20vh;
  width: 20vw;
}

.company-detail {
  margin: 1vh 0;
}

.company-detail>view {
  line-height: 5vh;
}

.industry, .telphone, .company-address, .icon-dianhua, .icon-shoucang,
.icon-chakan1, .icon-geren, .look-count, .love-count, .tea-count {
  font-size: 4vw;
  color: #c5c5c5;
}

.company-count>view {
  padding: 0 1vw;
}

.icon-chakan1, .icon-geren, .icon-shoucang, .icon-shoucang, .icon-weizhi,
.icon-dianhua {
  padding: 0 2vw;
}

.industry>view {
  padding: 0.5vw 2vw;
  border-radius: 1vw;
  border: 1px solid #50acff;
  margin: 0 2vw;
  line-height: 4vh;
}

.teacher-container, .company-detail-info {
  border-top: 1vh solid #f5f5f5;
}

.teacher-title, .company-detail-info-title {
  padding-left: 3vw;
  line-height: 7vh;
}

.roleHeadimg image {
  border-radius: 50%;
  width: 20vw;
  height: 20vw;
}

.teacher {
  padding: 0 3vw;
}

.scroll-view {
  width: 100%;
  height: 17vh;
}

.roleName {
  font-size: 4vw;
}

.company-detail-info {
  margin-bottom: 17vh;
}

.xing-p {
  padding: 2vw;
  font-size: 4.5vw;
  color: #c5c5c5;
}

.wxParse-img {
  display: block;
  width: 100% !important;
  /* height: 40vh !important; */
}

.foot-view {
  position: fixed;
  width: 100%;
  bottom: 0px;
  height: 10vh;
  border-top-left-radius: 10vw;
  border-top-right-radius: 10vw;
  background: #fff;
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.4);
  /* box-shadow: -1px 0px 10px #f4f4f4, 0px -4px 10px #f4f4f4; */
}

.btn-phone {
  position: absolute;
  /* bottom: 1vh;
  left: 2vw; */
  bottom: 4vh;
  left: 40.4vw;
  border-radius: 50%;
  width: 10vh;
  height: 10vh;
  background: #50acff;
  z-index: 11;
}

