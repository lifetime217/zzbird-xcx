/* pages/init/industry/industry.wxss */
@import "../../../common/style/common.wxss";
@import "../../../common/style/iconfont.wxss";

.swiper-tab {
  background-color: #e6e6e6;
  text-align: center;
  line-height: 8vh;
  width: 25%;
  height: 100vh;
}

/*去掉导航条  */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.h20 {
  height: 20%;
}

.swiper-tab-list {
  font-size: 3.5vw;
  /* display: inline-block; *//* width: 25%; */
  color: rgb(134, 134, 134);
  border-bottom: 0rpx;
}

.on {
  color: rgb(0, 144, 255);
  background-color: white !important;
  border-top: 2rpx solid #e6e6e6;
}

.container-right {
  background-color: white;
  border-top: 2rpx solid #e6e6e6;
  /* margin-bottom: 10.5vh; */
  height: 90vh;
}

.btn {
  float: left;
  width: 38%;
  border: 1px solid #e6e6e6;
  text-align: center;
  line-height: 8vh;
  color: rgb(134, 134, 134);
  display: flex;
  justify-content: center;
  margin: 1vh 2vh;
  border-radius: 1vh;
  font-size: 13px;
}

.btnConfirm {
  /* bottom: -2.2vh; */
  background: #50acff;
  color: white;
  width: 70%;
  position: absolute;
  right: 2vw;
  bottom: 1.5vh;
}
