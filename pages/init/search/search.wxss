/* pages/search/search.wxss */
@import "../../../common/style/common.wxss";
@import "../../../common/style/iconfont.wxss";

.bigcontainer {
  background-color: white;
  height: 100%;
}

.search_container {
  height: 8vh;
  background: white;
}

.iconfont {
  font-size: 21px;
}

.search_container input {
  display: inline-block;
  width: 100%;
  border-radius: 5px;
  text-align: center;
  height: 6vh;
  background-color: #ededed;
  margin-left: 1.8vw;
  color: #6e6e6e;
  margin-top: 1.8vw;
  /* color: rgb(34, 32, 32)!important; */
}

.placeHolder {
  color: #858585;
}

.searchcontainer {
  border-bottom: 1px solid #b8b8b8;
  background-color: white;
}

.history {
  margin: 2vh;
  display: flex;
  justify-content: space-between;
}

.oldSearch {
  display: inline-block;
  background-color: #ededed;
  width: auto;
  text-align: center;
  padding-left: 1.5vw;
  padding-right: 1.5vw;
  border-radius: 2vw;
  margin-bottom: 1.5vw;
}

.oldSearch>text {
  color: #858585;
}

.mui-col-sm-15 text {
  font-size: 5vw;
  position: relative;
  top: 0.5vh;
  background: white;
  color: #6e6e6e;
  /* box-shadow: 0 1px 2px rgba(48, 150, 218, 0.3); */
}

.btn {
  float: left;
  /* width: 20%; */
  border: 1px solid #e6e6e6;
  text-align: center;
  line-height: 5vh;
  display: flex;
  justify-content: center;
  margin-left: 2vh;
  border-radius: 1vh;
  background-color: #f8f8ff;
  padding: 2vw;
}

.toast_content_box {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
}

.toast_content {
  width: 50%;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
}

.toast_content_text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
