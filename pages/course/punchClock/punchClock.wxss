/* pages/course/punchClock/punchClock.wxss */
@import "../../../common/style/iconfont.wxss";
@import "../../../common/style/common.wxss";

page {
  height: 100%;
  width: 100%;
}

.userInfo {
  background-color: #61b4ff;
  width: 100%;
  height: 15vh;
}

.imgView {
  height: 100%;
}

.left-m {
  margin-left: 4vw;
}

.right-m {
  margin-right: 4vw;
}

.img {
  width: 15vw;
  height: 15vw;
  border-radius: 50% 50% 50% 50%;
}

.info {
  height: 10vh;
  width: 100%;
  justify-content: space-between;
}

.infoText {
  width: 100%;
  height: 4vh;
  justify-content: space-between;
}

.dakaDay {
  height: 100%;
}

.day {
  font-size: 7vw;
  color: #f4faff;
}

.teaName {
  font-size: 3.5vw;
  color: #f4faff;
}

.dayCount {
  font-size: 3.5vw;
  color: #f4faff;
}

.title {
  font-size: 3.5vw;
  padding-left: 3vw;
  background-color: #f5f5f5;
  height: 3.8vh;
}

.yidaka {
  min-height: 31vh;
  padding-top: 2vh;
}

.weidaka {
  min-height: 31vh;
  padding-top: 2vh;
}

.stu-info {
  height: 11.5vh;
  margin: 1vh 1vw 1vh 1vw;
  width: 18%;
  padding-top: 1vh;
}

.stu-info-on {
  height: 11.5vh;
  margin: 1vh 1vw 1vh 1vw;
  width: 18%;
  padding-top: 1vh;
  background: #61b4ff;
  border-radius: 1vw;
  color: #f5f5f5;
}

.stu-img {
  width: 13vw;
  height: 13vw;
  border-radius: 1vw;
}

.stu-name {
  font-size: 3.5vw;
}

.icon-gou {
  font-size: 3.5vw;
  left: 11vw;
  bottom: 6.5vh;
  color: #1468e7;
  position: relative;
}

.icon-gou-no {
  font-size: 3vw;
  left: 11vw;
  bottom: 6.5vh;
  color: #1468e7;
  position: relative;
  opacity: 1;
}

.show {
}

.hide {
}

.foot-btn {
  width: 90%;
  height: 100%;
  background: #50acff;
  margin: 0vh 3vw 0vh 3vw;
  border-radius: 2vw;
}

.betton {
  width: 100%;
  height: 7vh;
  margin: 2vh 0vw 2vh 0vw;
}

.foot-btn view {
  color: white;
}

.gray {
  background: #757575;
}
