/* pages/course/courseDetail/courseDetail.wxss */
@import "../../../common/style/common.wxss";
@import "../../../common/style/iconfont.wxss";

page {
  background: #f5f5f5;
}

.course-container {
  padding: 3vh 0;
  background: #fff;
}

.course-information>view:first-child {
  height: 20.5vh;
}

.course-information {
  /* height: 20.5vh; */
  border-radius: 1vw;
  box-shadow: -1px 0px 10px #f4f4f4,
                0px -4px 10px #f4f4f4,
                1px 0px 10px #f4f4f4,
                0px 4px 10px #f4f4f4;
  padding: 3vw 4vw 2vw 4vw;
  margin: 0vw 1.5vw;
}

.ordinary-company-img {
  position: relative;
  bottom: 4vh;
}

.ordinary-company-img image {
  width: 36vw;
  height: 23.5vh;
  border-radius: 2vw;
}

.teacher text {
  padding-right: 2vw;
}

.teacher, .companyName {
  color: #6e6e6e;
  font-size: 4vw;
}

.course-basics-information {
  line-height: 6vh;
  padding-left: 5.5vw;
}

.course-material-information {
  font-size: 4vw;
}

.course-desc-container {
  margin-top: 2vh;
  padding: 2vh 3vw;
  background: #fff;
  font-size: 4vw;
  color: #888;
}
