/* pages/course/courseDetail/courseDetail.wxss */
@import "../../../common/style/common.wxss";
@import "../../../common/style/iconfont.wxss";

page {
  background: #f5f5f5;
}

.course-container {
  padding: 3vh 0;
  background: #fff;
}

.course-information>view:first-child {
  height: 20.5vh;
}

.course-information {
  /* height: 20.5vh; */
  border-radius: 1vw;
  box-shadow: -1px 0px 10px #f4f4f4,
                0px -4px 10px #f4f4f4,
                1px 0px 10px #f4f4f4,
                0px 4px 10px #f4f4f4;
  padding: 3vw 4vw 2vw 4vw;
  margin: 0vw 1.5vw;
}

.ordinary-company-img {
  position: relative;
  bottom: 4vh;
}

.ordinary-company-img image {
  width: 36vw;
  height: 23.5vh;
  border-radius: 2vw;
}

.teacher text {
  padding-right: 1vw;
}

.teacher {
  height: 5vh;
}

.teacher, .companyName {
  color: #6e6e6e;
  font-size: 4vw;
}

.course-basics-information {
  line-height: 6vh;
  padding-left: 3.5vw;
}

.course-material-information {
  font-size: 4vw;
}

.course-desc-container {
  margin-top: 2vh;
  padding: 2vh 3vw;
  background: #fff;
  font-size: 4vw;
  color: #888;
}

.data-container {
  /* height: 10vh; */
  background: #fff;
  color: #6e6e6e;
  margin-top: 2vh;
}

.study-week>view, .class-hour>view {
  line-height: 4vh;
}

.data-container>view {
  font-size: 4vw;
  margin: 2vh 0 2vh 2vw;
  border-right: 1px solid #c5c5c5;
}

.modalbottom {
  /* background-color: white; */
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 13px;
}

.confirmModal {
  color: #00a7f7;
  font-weight: bold;
}

.confirmModal::after {
  border: 0;
}

.cancelModal {
  color: rgb(145, 145, 145);
}

.cancelModal::after {
  border: 0;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 97;
  background-color: rgba(0, 0, 0, 0.30);
}

.modal-layer {
  position: absolute;
  background: transparent;
  top: 50%;
  display: flex;
  flex-direction: column;
  z-index: 98;
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.4);
}

.modal-layer-md {
  width: 70%;
  transform: translate3d(-50%, -50%, 0);
  left: 50%;
}

.modal {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 100;
}

.modal-header {
  background: #f2f2f2;
  color: #686868;
  padding: 3vw;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.modal-body {
  background: #fff;
}

.BackIndex {
  margin: 2vh 0;
  color: #adadad;
  font-size: 14px;
}

.share {
  background: #1aac19;
  color: white;
  font-size: 5vw;
  width: 70%;
  height: 100rpx;
  margin: 3vh 0vw;
  right: -15vw;
}

canvas {
  position: fixed;
  top: 0;
  left: 100vw;
}

.preview {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  position: fixed;
  z-index: 2;
  top: 0px;
}

.preview image {
  width: 70%;
  position: absolute;
  top: 10%;
  left: 15%;
  z-index: 3;
  border: 1px dashed #fff;
}

.preview button {
  width: 40%;
  position: absolute;
  bottom: 150rpx;
  left: 30%;
}

.icon-xuexiao {
  margin: 0vh 2vw 0vh 0vw;
}

.icon-qiyelaoshi {
  font-size: 4vw;
}

.courseName>scroll-view {
  width: 49vw;
  height: 100%;
  white-space: nowrap;
}

.companyName>scroll-view {
  width: 42vw;
  height: 100%;
  white-space: nowrap;
}

.scroll {
  width: 42vw;
  height: 100%;
  white-space: nowrap;
}

.scroll view {
  display: inline-block;
  margin: 0vh 1.5vw 0vh 1.5vw;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.wxParse-img {
  width: 100% !important;
  margin: 1vh 0vw;
}

.jumpEdit {
  background: #4d89e2;
  color: white;
  font-size: 5vw;
  width: 70%;
  height: 100rpx;
  margin: 3vh 0vw;
  right: -15vw;
}
