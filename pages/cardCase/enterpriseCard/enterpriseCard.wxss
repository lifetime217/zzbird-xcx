@import "../../../common/style/common.wxss";
@import "../../../common/style/iconfont.wxss";

/* 图片 */

.AddCourseContainer {
  background: #fff;
  width: 100%;
  white-space: normal;
  height: 8vh;
  margin-bottom: 2vh;
}

.icon-chanyeleixing {
  color: #6b6b6b !important;
}

.modal-content {
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 13px;
}

.userinfo {
  background: none;
  width: 25%;
}

.userinfo::after {
  border: none;
}

.BackIndex {
  margin: 2vh 0;
  color: #adadad;
  font-size: 14px;
}

.addCourse {
  width: 93%;
}

.wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  /* min-height: 100%; */
}

.wrapper-center {
  /* height: 96vh; */
  width: 100vw;
  /* border-radius: 3vw; */
}

.slider-wrapper {
  position: relative;
  width: 100%;
  height: 36vh;
  overflow: hidden;
  background: #dbcdcd31;
  /* border-radius: 8px 8px 0 0; */
}

.slide-image, swiper {
  width: 100%;
  height: 36vh;
  /* border-top-left-radius: 8px;
  border-top-right-radius: 8px; */
}

.switch {
  position: absolute;
  text-align: center;
  background-color: rgba(60, 60, 61, 0.6);
  height: 10vw;
  width: 100%;
  top: 30.8vh;
}

.changeImg {
  color: white;
  font-size: 4vw;
  position: relative;
  top: -0.7vw;
}

/* 列表 */

.weui-row {
  display: flex;
  background-color: white;
  padding: 0 0 0 20rpx;
  height: 11vw;
  justify-content: space-between;
  border-bottom: 1px solid #ededed;
  font-size: 15px;
}

.iconfont {
  font-size: 3.5vw;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.company {
  /* 输入框字体位置 */
  padding-left: 10px;
}

.teacher, .course {
  overflow: hidden;
  /* width: 78vw; */
}

.companySite, .mapNameSite, .telephoneNumberSite {
  padding-left: 10px;
  color: #2c2828;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.teacherSite, .courseSite, .industryTagSite {
  background: #ededed;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 10px;
  text-align: center;
}

.teacherSite view, .courseSite view, .industryTagSite view {
  font-size: 14px;
  padding: 3px 6px;
  border-radius: 2vw;
  color: rgb(129, 127, 127);
}

.introduction {
  /* background: #fff; */
  border-radius: 0 0 8px 8px;
  background: rgb(255, 255, 255);
  margin-bottom: 3vh;
}

.intro {
  padding-left: 2px;
  /* padding-top: 3.5%; */
  background: #f8f8f8;
  font-size: 4vw;
  justify-content: space-between;
  height: 5.5vh;
}

.company-intro {
  padding-left: 7px;
  color: #808090;
  /* padding-top: 5px; */
}

.add_btn {
  /* position: fixed; */
  bottom: -1vh;
  left: 26vw;
  align-items: center;
  justify-content: center;
  background: #14a1fd;
  color: #fff;
}

.btn_edit {
  width: 93%;
  font-size: 5vw;
  /* width: 30%; */
  bottom: -2vh;
  align-items: center;
  justify-content: center;
  background: #14a1fd;
  color: #fff;
}

.btn {
  font-size: 5vw;
  /* width: 30%; */
  bottom: -2vh;
  align-items: center;
  justify-content: center;
  background: #1aac19;
  color: #fff;
}

.butt_edit {
  padding-bottom: 1vw;
}

.xing-p {
  padding: 2vw;
}

.wxParse-img {
  display: block;
  width: 100% !important;
  /* height: 40vh !important; */
}

